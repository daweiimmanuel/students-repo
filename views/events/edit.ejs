<% include ../partials/header %>
    <div class="ui main container segment">
        <h1 class="ui center aligned header">Update <%= event.eventName %></h1>
        <form class="ui form" action="" method="POST">
            <div class="field">
                <label>Event Name</label>
                <input type="text" name="eventName" value="<%= event.eventName %>">
            </div>
            <div class="field">
                <label>Event Date</label>
                <input type="date" name="eventDate" value="<%=event.event_date_yyyy_mm_dd%>">
            </div>
            <div class="ui error message"></div>
            <button class="ui primary button" type="submit">Submit</button>
        </form>
    </div>
    
    <script>
        $('.ui.form')
          .form({
            fields: {
              name: {
                identifier: 'eventName',
                rules: [
                  {
                    type   : 'empty',
                    prompt : 'Please enter Event Name'
                  }
                ]
              },
              date: {
                identifier: 'eventDate',
                rules: [
                  {
                    type   : 'empty',
                    prompt : 'Please enter Event Date'
                  }
                ]
              }
            }
          })
        ;
    </script>

<% include ../partials/footer %>