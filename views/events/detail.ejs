<% include ../partials/header %>
    <div class="ui main container segment">
        <p>
        <form class="ui form" action="<%= event.url %>" method="GET">
          <div class="field">
              <div class="ui action input">
                  <input type="text" name="search" placeholder="Student search...">
                  <div class="ui button">
                    Search
                  </div>
              </div>
          </div>
        </form>
        </p>
        <h1 class="ui center aligned header">Students who registered at <%= event.eventName %> (<%= event.event_date_formatted %>)</h1>
        <div class="ui cards">
            <%event_students.forEach(function(student) { %>
                <div class="card">
                    <div class="content">
                        <a href="<%= student.url %>">
                            <div class="header">
                                <%= student.name%>
                            </div>
                        </a>
                    </div>
                </div>
            <% })%>
        </div>
        <br>
        <div class="ui container">
            <a href="<%= event.url %>/delete">
                <button class="ui red button" type="submit">Delete Event</button>
            </a>
            <a href="<%= event.url %>/update">
                <button class="ui orange button" type="submit">Update Event</button>
            </a>
        </div>
    </div>

<% include ../partials/footer %>