<% include ../partials/header %>
    <div class="ui main container segment">
        <h1 class="ui center aligned header"><%= counsellor.counsellorName %></h1>
        <% if(counsellor_students.length){ %>
            <h2 class ="ui header">
                Delete the following students before attempting to delete this counsellor.
            </h2>
            <div class="ui cards">
                <%counsellor_students.forEach(function(student) { %>
                    <div class="card">
                        <div class="content">
                            <a href="<%= student.url %>">
                                <div class="header">
                                    <%= student.name%>
                                </div>
                            </a>
                        </div>
                    </div>
                <% })%>
            </div>
        <% } else { %>
            <h2 class="ui header">
                Do you really want to delete this Counsellor?
            </h2>
            <form class="ui form" action="" method="POST">
                <input type="hidden" name="counsellorid" required="true" value="<%= counsellor._id %>">
                <button class="ui red button" type="submit">Delete</button>
            </form>
        <% } %>
        
    </div>

<% include ../partials/footer %>