<% include ../partials/header %>
    <div class="ui main container segment">
        <h1 class="ui center aligned header">Add New Major</h1>
        <form class="ui form" action="" method="POST">
            <div class="field">
                <label>Major Name</label>
                <input type="text" name="majorName" placeholder="Major Name">
            </div>
            <div class="ui error message"></div>
            <button class="ui primary button" type="submit">Submit</button>
        </form>
    </div>
    
    <script>
        $('.ui.form')
          .form({
            fields: {
              name: {
                identifier: 'majorName',
                rules: [
                  {
                    type   : 'empty',
                    prompt : 'Please enter Major Name'
                  }
                ]
              }
            }
          })
        ;
    </script>

