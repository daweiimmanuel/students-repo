<% include ../partials/header %>
    <div class="ui main container segment">
        <h1 class="ui center aligned header">Update Rating <%= rating.rating %></h1>
        <form class="ui form" action="" method="POST">
            <div class="field">
                <label>Rating</label>
                <input type="number" name="rating" value="<%= rating.rating %>" min="1" max="3">
            </div>
            <div class="ui error message"></div>
            <button class="ui primary button" type="submit">Submit</button>
        </form>
    </div>
    
    <script>
        $('.ui.form')
          .form({
            fields: {
              rating: {
                identifier: 'rating',
                rules: [
                  {
                    type   : 'empty',
                    prompt : 'Please enter Rating'
                  }
                ]
              }
            }
          })
        ;
    </script>

